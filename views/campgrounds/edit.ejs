<% layout('layouts/boilerplate') %>
    <!-- 
  Extends the base layout 'boilerplate.ejs' using 'ejs-mate'.
  This keeps site-wide styling and markup consistent.
-->

    <div class="row">
        <!-- Page heading -->
        <div class="col-md-4 offset-md-4">
            <h1 class="text-center mb-2">Edit Campground</h1>
            <!-- Center the form with Bootstrap grid -->

            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" enctype="multipart/form-data"
                novalidate class="validated-form">
                <!-- 
          Form for editing an existing campground:
          - action sends POST request to "/campground/:id?_method=PUT" 
            (using method-override middleware to treat as PUT)
          - method="post" for form submission
          - novalidate disables native validation, enabling custom validation via JS
          - class "validated-form" hooks into Bootstrap's validation styling + your validateForm.js
        -->

                <!-- Title input pre-filled with existing campground data -->
                <div class="mb-1">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" required type="text" name="campground[title]" id="title"
                        value="<%= campground.title %>">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <!-- Location input pre-filled -->
                <div class="mb-1">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location"
                        value="<%= campground.location %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <!-- Price input pre-filled, includes currency symbol -->
                <div class="mb-1">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="basic-addon1" name="campground[price]" value="<%= campground.price %>"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>


                <!-- Upload Image input pre-filled -->
                <div class="mb-2 custom-file">
                    <div class="form-file custom-file">
                        <label for="formFileMultiple custom-file" class="form-label">Add More Images</label>
                        <input class="form-control" type="file" id="images" name="images" multiple>
                        <!-- <input class="form-control" type="file" id="formFileMultiple" multiple required> -->
                    </div>
                </div>


                <!-- Description textarea pre-filled -->
                <div class="mb-2">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" name="campground[description]" id="description"
                        required><%= campground.description %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <% campground.images.forEach(function(img, i) { %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]"
                                value="<%= img.filename %>">
                        </div>
                        <label for="image-<%= i %>">Delete?</label>
                        <% }) %>
                </div>

                <!-- Submit button -->
                <div class="mb-2">
                    <button class="btn btn-info btn-block w-100">Update Campground</button>
                </div>

            </form>

            <!-- Link to go back to all campgrounds -->
            <div class="text-center">
                <a href="/campgrounds">Back to all campground</a>
            </div>
        </div>
    </div>